<!DOCTYPE html>

<html>
	<head>
		<meta http-equiv="content-type" content="text/html;charset=UTF-8" />
		<title><%= (@tab && @tab.title) ? @tab.title : 'Gtree' %></title>

		<%= stylesheet_link_tag 'blueprint/screen', :media => "screen, projection" %>
		<%= stylesheet_link_tag 'blueprint/print', :media => "print" %>
		<%= stylesheet_link_tag 'application' %>

		<%= javascript_include_tag "show_tab" %>
		<%= javascript_include_tag "tablature" %>
		<%= javascript_include_tag "application" %>
		<%= javascript_include_tag "jquery" %>
		<%= javascript_include_tag :defaults %>
		<%= csrf_meta_tag %>
		<!--[if lt IE 8]>
		<link rel="stylesheet" href="css/blueprint/ie.css" type="text/css" media="screen, projection" />
		<![endif]-->
	</head>
	<body>
		<div class="container">
        <div class="span-24 header">
		<div class="span-4"><%= link_to image_tag("header.png"), root_url, :title => "Logo" %></div>
        <div class="span-20 last header_right">
        <% if current_user %>
            <div class="span-5">
        <% else %>
            <div class="span-3">
        <% end %>
			<div class="span-1"><%= link_to image_tag("home.png"), root_url, :title => "Home" %></div>
			<div class="span-1"><%= link_to image_tag("users.png"), users_path, :title => "Users" %></div>
		<% if current_user %>
			<div class="span-1"><%= link_to image_tag("add.png"), new_tab_path, :title => "Add tab" %></div>
			<div class="span-1"><%= link_to image_tag("my_tabs.png"), user_tab_path, :title => "My tabs" %></div>
			<div class="span-1 last"><%= image_tag 'search.png', :title => "Search", :alt => "Search" %></div>
            </div>
            <div class="span-7">
			<% form_tag tabs_path, :method => 'get' do %>
			  <%= text_field_tag :search, params[:search] %>
			  <%= submit_tag "Search", :name => nil %>
			<% end %>
            </div>
            <!--div class="column"></div-->
            <div class="prepend-3 span-4 last">
		    <%= image_tag current_user.gravatar_url(:size => 30), :height => 30, :width => 30 %>
		    <%= link_to current_user.username, user_path(:current), :title => "Profile", :id=>"current_user" %>
            </div>
		    <div class="span-1"><%= link_to image_tag("logout.png"), logout_path, :title => "Logout" %></div>
		<% else %>
			<%= image_tag 'search.png', :title => "Search" %>
            </div>
            <div class="span-9">
			<% form_tag tabs_path, :method => 'get' do %>
			  <%= text_field_tag :search, params[:search] %>
			  <%= submit_tag "Search", :name => nil %>
			<% end %>
            </div>
            <!--div class="column"></div-->
            <div class="prepend-5 span-2 last">
			<%= link_to "Register", new_user_path, :title => "Register" %>
            </div>
            <div class="span-1"><%= link_to image_tag("login.png"), login_path, :title => "Login" %></div>
		<% end %>
        </div>
        </div>
            
		<% flash.each do |key, msg| %>
			<div class="<%= key %>" id="alert">
			    <%= msg %>
            </div>
		<% end %>

			<div class="mainContent">
				<%= yield %>
			</div><!-- end .mainContent -->
		</div><!-- end .container -->
		
		<div class="exp_footer">
			<div class="footer">
				<p>This is footer</p>
			</div><!-- end .footer -->
		</div><!-- end exp_footer -->
	</body>
</html>
