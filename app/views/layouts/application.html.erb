<!DOCTYPE html>

<html>
	<head>
		<meta http-equiv="content-type" content="text/html;charset=UTF-8" />
		<title><%= (@tab && @tab.title) ? @tab.title : 'Gtree' %></title>

		<%= stylesheet_link_tag 'blueprint/screen', :media => "screen, projection" %>
		<%= stylesheet_link_tag 'blueprint/print', :media => "print" %>
		<%= stylesheet_link_tag 'application' %>

		<%= javascript_include_tag "show_tab" %>
		<%= javascript_include_tag "tablature" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tag %>
		<!--[if lt IE 8]>
		<link rel="stylesheet" href="css/blueprint/ie.css" type="text/css" media="screen, projection" />
		<![endif]-->
	</head>
	<body>
		<div class="container">
			<div class="header">
				<div id="navmenu">
				  <ul>
					<li><%= link_to image_tag("header.png"), root_url, :title => "Logo" %></li>
					<li><%= link_to image_tag("home.png"), root_url, :title => "Home" %></li>
					<li><%= link_to image_tag("users.png"), users_path, :title => "Users" %></li>
                    <li><%= link_to image_tag("search.png"), root_url, :title => "Search" %></li>
				<% if current_user %>
					<li><%= link_to image_tag("add.png"), new_tab_path, :title => "Add tab" %></li>
					<li><%= link_to image_tag("my_tabs.png"), user_tab_path, :title => "My tabs" %></li>
					<li><%= image_tag current_user.gravatar_url(:size => 25), :height => 25 %></li>
					<li><%= link_to current_user.username, user_path(:current), :title => "Profile", :id=>"current_user" %></li>
					<li><%= link_to image_tag("profile.png"), edit_user_path(:current), :title => "Edit profile"  %></li>
					<li><%= link_to image_tag("logout.png"), logout_path, :title => "Logout" %></li>
				<% else %>
					<li><%= link_to "Register", new_user_path, :title => "Register" %></li>
					<li><%= link_to image_tag("login.png"), login_path, :title => "Login" %></li>
				<% end %>
				  </ul>
				</div><!-- end #navmenu -->
			</div><!-- end .header -->
            
		<% flash.each do |key, msg| %>
			<div class="span-24">
				<div class="<%= key %>">
					<%= msg %>
				</div><!-- end flash message -->
			</div><!-- end .span-24 -->
		<% end %>

			<div class="mainContent">
				<%= yield %>
			</div><!-- end .mainContent -->
		</div><!-- end .container -->
		
		<div class="exp_footer">
			<div class="footer">
				<p>This is footer</p>
			</div><!-- end .footer -->
		</div><!-- end exp_footer -->
	</body>
</html>
