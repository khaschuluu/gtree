<h1><%= t'user.index_title' %></h1>

<table>
  <tr bgcolor="gray">
    <th><%= t'user.username' %></th>
    <th><%= t'user.email' %></th>
    <th></th><th></th>
  </tr>

<% for user in @users %>
  <tr bgcolor="<%= cycle('white', '#ccc') %>">
    <td><h2><%= image_tag user.gravatar_url(:size => 30) %><%= link_to user.username, user %></h2></td>
    <td><%=h user.email %></td>
    <% if current_user %>
      <% if current_user.id == user.id %>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
      <% else %>
        <td></td><td></td>
      <% end %>
    <% else %>
      <td></td><td></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />
