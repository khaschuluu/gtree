<% if @user == current_user %>
  <h1>Your profile</h1>
<% else %>
  <h1><%=h @user.username %></h1>
<% end %>
<p>
  <%= image_tag @user.gravatar_url %>
</p>
<p>
  <b>Username:</b>
  <%=h @user.username %>
</p>

<p>
  <b>Email:</b>
  <%=h @user.email %>
</p>

<p>
  <%= link_to @user.username, tabs_path(:user_id => @user.id) %>
</p>

<% if current_user %>
  <% if current_user.id == @user.id %>
    <%= link_to 'Edit profile', edit_user_path(:current) %>
  <% end %>
<% end %>
