<% if @user == current_user %>
  <h1><%= t'user.your_profile' %></h1>
<% else %>
  <h1><%=h @user.username %></h1>
<% end %>
<p>
  <%= image_tag @user.gravatar_url %>
</p>
<p>
  <b><%= t'user.username' %>:</b>
  <%=h @user.username %>
</p>

<p>
  <b><%= t'user.email' %>:</b>
  <%=h @user.email %>
</p>

<p>
  <%= link_to @user.username, tabs_path(:user_id => @user.id) %>
</p>

<% if current_user %>
  <% if current_user.id == @user.id %>
    <%= link_to (t'user.edit'), edit_user_path(:current) %>
  <% end %>
<% end %>
